<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/placeholder"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        android:fontFamily="sans-serif-light"
        android:text="Petit pois et carottes"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:fontFamily="sans-serif-light"
        android:text="Cassegrain"
        android:textSize="15sp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/nutri_score"
        android:src="@drawable/nutriscore_a"
        android:layout_width="78dp"
        android:layout_height="42dp"
        app:layout_constraintEnd_toStartOf="@id/right_margin"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Code barres: 30836800858304"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/brand" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Quantité: 400g (280g net égoutté)"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/barcode" />
    <TextView
        android:id="@+id/sale_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Vendu en : France, Japon, Suisse"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/quantity" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Ingrédients: Petits pois 66%, eau, garniture 2,8% (salade, oignon grelot), sucre, sel, arôme naturel"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/sale_country" />

    <TextView
        android:id="@+id/allergenics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Substances allergènes: Aucune"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/ingredients" />

    <TextView
        android:id="@+id/additives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Additifs: Aucun"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/left_margin"
        app:layout_constraintTop_toBottomOf="@id/allergenics" />
</androidx.constraintlayout.widget.ConstraintLayout>
